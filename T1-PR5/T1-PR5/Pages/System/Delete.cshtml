@page
@model T1_PR5.Pages.System.DeleteModel
@{
	ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row shadow">
	<input type="hidden" asp-for="Systems.Id"/>
	<div class="col-9">
		<div class="form-group">
			<label asp-for="Systems.Type" class="control-label"></label>
			<input asp-for="Systems.Type" class="form-control" readonly/>
		</div>
		<div class="form-group">
			<label asp-for="Systems.SunHours" class="control-label"></label>
			<input asp-for="Systems.SunHours" class="form-control" readonly/>
		</div>
		<div class="form-group">
			<label asp-for="Systems.WindSpeed" class="control-label"></label>
			<input asp-for="Systems.WindSpeed" class="form-control" readonly/>
		</div>
		<div class="form-group">
			<label asp-for="Systems.WaterFlow" class="control-label"></label>
			<input asp-for="Systems.WaterFlow" class="form-control" readonly/>
		</div>
		<div class="form-group">
			<label asp-for="Systems.Ratio" class="control-label"></label>
			<input asp-for="Systems.Ratio" class="form-control" readonly/>
		</div>
		<div class="form-group">
			<label asp-for="Systems.GeneratedEnergy" class="control-label"></label>
			<input asp-for="Systems.GeneratedEnergy" class="form-control" readonly/>
		</div>
		<div class="form-group">
			<label asp-for="Systems.CostPerKWh" class="control-label"></label>
			<input asp-for="Systems.CostPerKWh" class="form-control" readonly/>
		</div>
		<div class="form-group">
			<label asp-for="Systems.PricePerKWh" class="control-label"></label>
			<input asp-for="Systems.PricePerKWh" class="form-control" readonly/>
		</div>
		<div class="form-group">
			<label asp-for="Systems.DateTime" class="control-label"></label>
			<input asp-for="Systems.DateTime" class="form-control" readonly/>
		</div>
		<form method="post">
			<div class="form-group mt-2">
				<input type="submit" value="Delete" class="btn btn-danger" />
				<a class="btn btn-secondary" asp-page="./Index">Back to List</a>
			</div>
		</form>
	</div>
</div>